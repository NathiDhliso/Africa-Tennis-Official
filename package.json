{
  "name": "africa-tennis-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "//--- DEVELOPMENT ---//": "",
    "dev": "vite",
    "dev:aws": "cross-env VITE_USE_AWS=true vite",

    "//--- BUILDING & DEPLOYMENT ---//": "",
    "build": "npm run type-check && vite build",
    "build:aws": "cross-env VITE_USE_AWS=true npm run build",
    "build:analyze": "vite build --mode analyze",
    "deploy:frontend": "npm run build && echo 'Frontend built successfully'",
    "deploy:aws": "cd aws && sam build && sam deploy --guided",

    "//--- LINTING & FORMATTING ---//": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",

    "//--- TESTING ---//": "",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:backend": "cd aws && npm test",
    "test:ci": "node -e \"const fs = require('fs'); fs.mkdirSync('coverage', {recursive: true}); fs.writeFileSync('coverage/README.md', 'Cypress E2E tests skipped in Amplify - handled by GitHub Actions');\"",

    "//--- UTILITIES ---//": "",
    "preview": "vite preview",
    "add-test-users": "tsx src/scripts/add-test-users.ts",
    "prepare": "husky || true"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@sentry/react": "^7.99.0",
    "@supabase/supabase-js": "^2.39.3",
    "@tanstack/react-query": "^5.17.0",
    "@tanstack/react-query-devtools": "^5.17.0",
    "long": "^5.2.3",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-hook-form": "^7.49.3",
    "react-intersection-observer": "^9.8.1",
    "react-router-dom": "^6.26.0",
    "react-webcam": "^7.2.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.6",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^15.0.0",
    "husky": "^9.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.1",
    "terser": "^5.43.1",
    "typescript": "^5.2.2",
    "vite": "^7.0.6",
    "vite-plugin-compression": "^0.5.1"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}